<!DOCTYPE html>

    <head>
        <title>GET FLOOR</title>
        <meta charset='utf-8'>
        <%- include ('../partials/head'); %>
        <style>
           #navbar{
            margin-right: 12px;
           }
        </style>
    </head>

    <body class = "container">
        <h1>
           GET FLOOR
        </h1>
        <header>
            <nav >
                <a href = "/home" id = "navbar"> Home</a> 
                <a href = "/floor/get" id = "navbar"> GET</a> 
                <a href = "/floor/put" id = "navbar"> PUT</a> 
                <a href = "/floor/post" id = "navbar"> POST</a> 
                <a href = "/floor/delete" id = "navbar"> DELETE</a> 
            </nav>
        </header>   
        <div class ="row">
            <div class = "col">
                <main class = "jumbotron" style = "height: 100%;">
                <h2 style = "text-align:center;">Floor Database</h2>
                
                
                    <table class = "table table-sm table-primary w-25 m-auto">
                        <tr>
                            
                            <th class = "text-center">Floor Level</th>
                            <th>Floor Name</th>
                        </tr>
                            <%if(locals.floor){%>
                            <%locals.floor.forEach(function(x){%>
                                
                                <tr>
                                    <td class = "text-center"><%=x.level%></td>
                                    <td ><%=x.name%></td>
                                </tr>
                                
                            <%})%>
                            <%}%>
                    </table>
                
                </main>
            </div>
            
        </div>
        
        <footer>
            <%- include('../partials/footer.ejs'); %>
        </footer>
    </body>
    
</html>