<!DOCTYPE html>

    <head>
        <title>PUT FLOOR</title>
        <meta charset='utf-8'>
        <%- include ('../partials/head'); %>
        <style>
            #navbar{
                margin-right: 12px;
            }
            
        </style>
        
    </head>

    <body class = "container">
        <h1>
           PUT FLOOR 
        </h1>   
        <header>
            <nav>
                <a href = "/home" id = "navbar"> Home</a>
                <a href = "/floor/get" id = "navbar"> GET</a> 
                <a href = "/floor/put" id = "navbar"> PUT</a> 
                <a href = "/floor/post" id = "navbar"> POST</a> 
                <a href = "/floor/delete" id = "navbar"> DELETE</a>
            </nav>
            
        </header>  
        <div class = "row">
            <div class = "col pr-0">
                <main class = "jumbotron" style = "height:100%;">
                    <h2>Update Floor Name</h2>
                    <br>
                    <form action = "/floor/put" method = "post" style = "text-align: left;">
                        Select Floor Level: <br>

                        <%if (locals.available_floors){%>
                            <select name = "selectedfloor" class = "form-control text-center">
                            <%locals.available_floors.forEach (function(x){%>
                                <option value = "<%=x.level%>"> <%=x.level%></option>
                                <%
                            });%>
                        </select>
                        <%}%>
                        

                        <br>
                        New Floor Name: <input type = "text" name = "name" required class = "form-control" placeholder = "Update Floor Name"> 
                        <br><input type = "submit" class="btn btn-primary">
                        
                    </form>
                    <br>
                    <strong style = "color:green;"><%if (locals.api_response){%>
                        <%=api_response%>
                    <%}%></strong>
                </main>
            </div>

            <div class = "col pl-0">
                <main class = "jumbotron" style = "height:100%;">
                    <h2>Floor Database</h2>
                    <table class = "table-sm table table-primary" style ="width:60%;">
                        <tr>
                            
                            <th class = "text-center">Floor Level</th>
                            <th>Floor Name</th>
                        </tr>
                        <%if(locals.available_floors){%>
                            <%if(locals.level && locals.name){%>
                                <%locals.available_floors.forEach(function(x){%>
                                    <tr>
                                        <%if((x.level == locals.level) &&(x.name == locals.name)){%>
                                            <td class = "text-center" style = "background-color: rgb(200, 255, 200);"><%=x.level%></td>
                                            <td style = "background-color: rgb(200, 255, 200);"><%=x.name%></td>
                                        <%}
                                        else{%>
                                            <td class = "text-center"><%=x.level%></td>
                                            <td ><%=x.name%></td>
                                        <%}%>
                                    </tr>
                                        
                                    <%})%>
                            <%}
                            else{%>
                                <%locals.available_floors.forEach(function(x){%>
                                    <tr>
                                        <td class = "text-center"><%=x.level%></td>
                                        <td ><%=x.name%></td>
                                    </tr>
                                <%})%>
                            <%}%>        
                        <%}%>
                </table>
                    
                </main>
            </div>
        </div>
        
        <script>
            if (window.history.replaceState){
                    window.history.replaceState( null, null, window.location.href );
            }
        </script>
    

        
        <footer>
            <%- include('../partials/footer.ejs'); %>
        </footer>
    </body>
    
</html>
        